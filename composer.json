{
    "name": "zumba/elasticsearch-index-rotate",
    "description": "Safely rotate indexes with no downtime to end users.",
    "keywords": ["elasticsearch"],
    "authors": [
        {
            "name": "Chris Saylor",
            "email": "cjsaylor@gmail.com"
        }
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:elasticsearch/elasticsearch-php.git"
        }
    ],
    "require": {
        "php": ">=7.2",
        "elasticsearch/elasticsearch": ">=6.8.8",
        "psr/log": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Zumba\\ElasticsearchRotator\\": "src/"
        }
    },
    "suggest": {
        "monolog/monolog": "Allows more advanced logging of the application flow"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "zumba/elasticsearchunit": "~2.0.0"
    },
    "config": {
        "platform" : {
            "php": "7.2"
        }
    }
}
